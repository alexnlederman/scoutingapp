<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:background="@color/white"
				android:layout_height="match_parent"
				android:orientation="vertical">

	<TextView
		android:id="@+id/pit_scout_team_number"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="6dp"
		android:textSize="25sp"/>

	<ProgressBar
		android:id="@+id/pit_scout_progress"
		style="@style/Widget.AppCompat.ProgressBar.Horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignBottom="@+id/pit_scout_team_number"
		android:layout_alignTop="@+id/pit_scout_team_number"
		android:progressDrawable="@drawable/team_progress_bar"/>

</RelativeLayout>