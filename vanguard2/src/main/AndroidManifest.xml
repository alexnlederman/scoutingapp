<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="com.example.vanguard">

	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>


	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".pages.activities.MainActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".pages.activities.MatchFormActivity"
			android:label="@string/title_activity_match_form"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="stateHidden">
		</activity>
		<activity
			android:name=".pages.activities.PitFormActivity"
			android:label="@string/title_activity_pit_form"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="stateHidden">
		</activity>
		<activity
			android:name=".pages.activities.SettingsActivity"
			android:label="@string/title_activity_settings"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
			android:name=".pages.activities.ScoutSettingsActivity"
			android:label="QuestionSettingsActivity"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="stateHidden">
		</activity>
		<activity
			android:name=".pages.activities.AddGraphActivity"
			android:label="AddGraphActivity"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
			android:name=".pages.activities.AddQuestionActivity"
			android:label="AddQuestionActivity"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
			android:name=".pages.fragments.TeamGraphViewerFragment"
			android:label="ViewTeamGraphActivity"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
	</application>

</manifest>